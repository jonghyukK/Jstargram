<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
                name="contentItem"
                type="com.trebit.reststudy.data.model.ContentItem"/>
    </data>


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <!-- Top Layout -->
        <RelativeLayout
                android:id="@+id/ll_topContainer"
                android:layout_width="match_parent"
                android:layout_height="52dp">

            <!-- Profile Img -->
            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profileImg"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_centerVertical="true"
                    app:bind_content_img="@{contentItem.writer_profile}"/>

            <!-- Writer Email -->
            <TextView
                    android:id="@+id/tv_writer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/iv_profileImg"
                    android:layout_centerVertical="true"
                    android:text="@{contentItem.writer}"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>
            
            <ImageView
                    android:id="@+id/iv_more"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_gravity="end"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/icon_more_black"/>
        </RelativeLayout>

        <android.support.constraint.ConstraintLayout
                android:id="@+id/cl_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_topContainer">

            <!-- Content Image -->
            <ImageView
                    android:id="@+id/iv_contentImg"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:bind_content_img="@{contentItem.image_path}"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>


        </android.support.constraint.ConstraintLayout>


        <RelativeLayout
                android:id="@+id/rl_middleContainer"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/cl_container"
                android:layout_marginTop="8dp">

            <!-- Favorite Icon -->
            <ImageView
                    android:id="@+id/iv_favorite"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_favorite_black"/>

            <!-- Favorite Icon -->
            <ImageView
                    android:id="@+id/iv_comment"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_toEndOf="@+id/iv_favorite"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/icon_comment_black"/>
        </RelativeLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_middleContainer"
                android:orientation="vertical">

            <!-- 좋아요 정보 -->
            <TextView
                    android:id="@+id/tv_favoriteInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="15dp"
                    android:visibility="@{contentItem.favorite_cnt == 0 ? View.GONE : View.VISIBLE}"
                    android:text="ch.uu님이 좋아합니다."/>

            <!-- 내가 쓴 내용 -->
            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="@{contentItem.content.isEmpty ? View.GONE : View.VISIBLE}">

                <TextView
                        android:id="@+id/tv_writer2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:text="@{contentItem.writer}"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        tools:text="hyuk.08.20"/>

                <TextView
                        android:id="@+id/tv_contentText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/tv_writer2"
                        android:layout_marginStart="10dp"
                        android:text="@{contentItem.content}"
                        tools:text="Hello myname is"/>

            </RelativeLayout>

            <!-- 글 쓴 날짜 -->
            <TextView
                    android:id="@+id/tv_createdAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/gray_3"
                    tools:text="2월 3일"/>
        </LinearLayout>


    </RelativeLayout>
</layout>

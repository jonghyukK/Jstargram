<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="contentItem"
                type="com.trebit.reststudy.data.model.ContentItem"/>
    </data>


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <!-- Top Layout -->
        <LinearLayout
                android:id="@+id/ll_topContainer"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@color/gray_2">

            <!-- Profile Img -->
            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profileImg"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="center_vertical"
                    app:contentImageSet="@{contentItem.writer_profile}"/>

            <!-- Writer Email -->
            <TextView
                    android:id="@+id/tv_writer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@{contentItem.writer}"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>
        </LinearLayout>


        <ImageView
                android:id="@+id/iv_contentImg"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@+id/ll_topContainer"
                app:contentImageSet="@{contentItem.image_path}"/>

        <ImageView
                android:id="@+id/iv_favorite"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_below="@+id/iv_contentImg"
                android:layout_marginTop="13dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/icon_mypage_b"/>

        <TextView
                android:id="@+id/tv_favoriteInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_favorite"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="15dp"
                tools:text="ch.uu님이 좋아합니다."/>

        <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_favoriteInfo"
                android:layout_marginStart="15dp"
                android:textColor="@color/black"
                tools:text="2월 3일"/>
    </RelativeLayout>
</layout>

<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

        <TextView
                android:id="@+id/tv_userEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="hyuk.08.20"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

        <!-- 상단 프로필, 게시물, 팔로워, 팔로잉 정보 Layout -->
        <RelativeLayout
                android:id="@+id/rl_userInfoLayout"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/tv_userEmail"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                >


            <RelativeLayout
                    android:id="@+id/rl_profileLayout"
                    android:layout_width="100dp"
                    android:layout_height="match_parent">

                <!-- Profile Image View -->
                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_profileImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:src="@drawable/sample_02"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#9e9e9e"
                        />

                <!-- Profile Image Modify -->
                <ImageView
                        android:id="@+id/iv_modifyProfileImg"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/icon_add_picture_b"/>

            </RelativeLayout>


            <!-- 게시물, 팔로워, 팔로잉 레이아웃 -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/rl_profileLayout"
                    android:layout_marginStart="10dp"
                    android:orientation="horizontal">

                <!-- 게시물 Layout -->
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/tv_contentsCnt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:text="300"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="3dp"
                            android:text="@string/contents"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="15sp"/>
                </LinearLayout>

                <!-- 팔로워 Layout -->
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/tv_followerCnt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:text="300"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="3dp"
                            android:text="@string/follower"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="15sp"/>
                </LinearLayout>

                <!-- 팔로잉 Layout -->
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/tv_followingCnt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:text="300"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="3dp"
                            android:text="@string/following"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="15sp"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <TextView
                android:id="@+id/tv_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="18dp"
                android:layout_below="@+id/rl_userInfoLayout"
                tools:text="91.08.20"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>




    </RelativeLayout>


</layout>

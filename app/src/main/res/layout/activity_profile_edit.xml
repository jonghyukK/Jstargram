<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
                name="viewModel"
                type="com.trebit.reststudy.ui.profile.ProfileViewModel"/>
        <variable
                name="mainViewModel"
                type="com.trebit.reststudy.ui.main.viewmodel.MainViewModel"/>
        <variable
                name="activity"
                type="com.trebit.reststudy.ui.profile.ProfileEditActivity"/>
    </data>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

        <!-- 상단 AppBar Layout -->
        <RelativeLayout
                android:id="@+id/rl_appBarLayout"
                android:layout_width="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_height="50dp">

            <!-- 취소 -->
            <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/cancel"
                    android:textColor="@color/gray_3"
                    android:textSize="15sp"
                    android:onClick="@{activity::onClickEvent}"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/edit_profile"
                    android:textColor="@color/black"
                    android:textSize="19sp"/>

            <!-- 완료 -->
            <TextView
                    android:id="@+id/tv_doFinish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:focusable="true"
                    android:clickable="true"
                    android:text="@string/success"
                    android:textColor="@drawable/color_text"
                    android:textSize="15sp"
                    android:onClick="@{activity::onClickEvent}"/>
        </RelativeLayout>


        <!-- 프로필 사진 Layout -->
        <RelativeLayout
                android:id="@+id/rl_profileLayout"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_below="@+id/rl_appBarLayout"
                android:background="@color/gray_1">

            <View
                    android:id="@+id/divider1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_2"/>

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                <!-- Profile Image View -->
                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_editProfileImg"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/sample_02"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/gray_2"/>

                <!-- 프로필 사진 바꾸기 -->
                <TextView
                        android:id="@+id/tv_editProfileImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:layout_below="@+id/iv_editProfileImg"
                        android:focusable="true"
                        android:clickable="true"
                        android:text="@string/edit_profile_img"
                        android:textColor="@drawable/color_text"
                        android:textSize="13sp"
                        android:onClick="@{activity::onClickEvent}"/>
            </RelativeLayout>

            <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/gray_2"/>
        </RelativeLayout>

        <!-- 이름, 이메일, 소개 Layout -->
        <LinearLayout
                android:id="@+id/ll_infoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_profileLayout"
                android:orientation="vertical">


            <!-- 이름 -->
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                <TextView
                        android:id="@+id/tv_descName"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:paddingStart="15dp"
                        android:gravity="center_vertical"
                        android:text="@string/name"
                        android:textColor="@color/gray_4"
                        android:textSize="14sp"/>


                <RelativeLayout
                        android:id="@+id/rl_inputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@+id/tv_descName"
                        >

                    <EditText
                            android:id="@+id/et_editName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColorHint="@android:color/darker_gray"
                            android:textColor="@color/black"
                            android:hint="@string/name"
                            android:textSize="14sp"
                            android:paddingStart="1dp"
                            android:paddingEnd="50dp"
                            android:background="@null"
                            android:singleLine="true"
                            android:inputType="textEmailAddress"
                            android:text="@{mainViewModel.myAccountInfo.name}"/>


                    <ImageView
                            android:id="@+id/iv_clearEditName"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:padding="10dp"
                            android:visibility="gone"
                            android:src="@drawable/icon_clear"
                            android:onClick="@{activity::onClickEvent}"/>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/gray_2"/>
                </RelativeLayout>
            </RelativeLayout>


            <!-- 이메일 -->
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                <TextView
                        android:id="@+id/tv_descEmail"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:paddingStart="15dp"
                        android:gravity="center_vertical"
                        android:text="@string/email"
                        android:textColor="@color/gray_4"
                        android:textSize="14sp"/>


                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@+id/tv_descEmail"
                        >

                    <TextView
                            android:id="@+id/tv_myEmail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:text="@{mainViewModel.myAccountInfo.email}"/>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/gray_2"/>
                </RelativeLayout>
            </RelativeLayout>


            <!-- 소개 -->
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="45dp">

                <TextView
                        android:id="@+id/tv_descIntroduce"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:paddingStart="15dp"
                        android:layout_centerVertical="true"
                        android:text="@string/introduce"
                        android:textColor="@color/gray_4"
                        android:textSize="14sp"/>

                <EditText
                        android:id="@+id/et_editIntroduce"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/tv_descIntroduce"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:textColorHint="@android:color/darker_gray"
                        android:textColor="@color/black"
                        android:hint="@string/introduce"
                        android:maxLines="8"
                        android:textSize="14sp"
                        android:text="@{mainViewModel.myAccountInfo.introduce}"/>
            </RelativeLayout>
        </LinearLayout>

        <View
                android:id="@+id/divider02"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/ll_infoLayout"
                android:background="@color/gray_2"/>

    </RelativeLayout>


</layout>

